{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-11 générer le fichier actif",
            "command": "/usr/local/bin/gcc-11",
            "args": [
                "-g",
                //"${file}",
                "${fileDirname}/*.c",
                "-lm",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}